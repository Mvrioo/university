                <a href="#" class="block px-4 py-5" data-target="networking">Networking</a>
                <a href="#" class="block px-4 py-5" data-target="contactanos">Contáctanos</a>
            `;
        });
    }

    // Cambiar opciones al hacer clic en un enlace
    if (menuOptions) {
        menuOptions.addEventListener('click', function(e) {
            const target = e.target as HTMLElement;  // Asegúrate de que target sea un HTMLElement

            if (target && target.tagName === 'A') {
                const targetId = target.getAttribute('data-target');

                // Cambiar el título según el botón presionado
                if (targetId === 'cursos-talleres' && menuTitle && menuOptions) {
                    menuTitle.textContent = "Cursos y Talleres";
                    menuOptions.innerHTML = `
                        <a href="#" class="block px-4 py-5">Auditoría Ágil</a>
                        <a href="#" class="block px-4 py-5">Auditoría TI</a>
                        <a href="#" class="block px-4 py-5">Entrenamiento Internacional</a>
                        <a href="#" class="block px-4 py-5">Entrenamiento Ejecutivo</a>
                        <a href="#" class="block px-4 py-5">Talleres In Company</a>
                        <a href="#" class="block px-4 py-5">Talleres Abiertos</a>
                    `;
                }
                // Aquí puedes agregar más condiciones para los otros botones.

                // Añadir un listener para el "Volver" y restaurar el menú
                const backToMenu = document.getElementById('back-to-menu') as HTMLElement | null;
                if (backToMenu) {
                    backToMenu.addEventListener('click', function() {
                        if (backButton) {
                            backButton.click();
                        }
                    });
                }
            }
        });
    }
</script>



