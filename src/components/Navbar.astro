<script>
    // Toggle mobile menu
    const menuButton = document.getElementById('menu-toggle') as HTMLElement | null;
    const mobileMenu = document.getElementById('mobile-menu') as HTMLElement | null;
    const closeButton = document.getElementById('close-menu') as HTMLElement | null;
    const backButton = document.getElementById('back-button') as HTMLElement | null;
    const menuTitle = document.getElementById('menu-title') as HTMLElement | null;
    const menuOptions = document.getElementById('menu-options') as HTMLElement | null;

    // Mostrar u ocultar el menú móvil
    if (menuButton && mobileMenu) {
        menuButton.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');  // Show or hide menu
        });
    }

    // Cerrar el menú móvil cuando se haga clic en la "X"
    if (closeButton && mobileMenu) {
        closeButton.addEventListener('click', function() {
            mobileMenu.classList.add('hidden');
        });
    }

    // Acción para la flecha (regresar o cerrar, dependiendo de tu lógica)
    if (backButton && menuTitle && menuOptions) {
        backButton.addEventListener('click', function() {
            // Cambiar título de vuelta a "Menú" y restaurar opciones principales
            menuTitle.textContent = "Menú";
            menuOptions.innerHTML = `
                <a href="#" class="block px-4 py-5" data-target="cursos-talleres">Cursos y Talleres</a>
                <a href="#" class="block px-4 py-5" data-target="certificaciones">Certificaciones internacionales</a>
