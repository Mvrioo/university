---
import testimonios from "../config/testimonios.json";
---

<div class="flex flex-col bg-white h-[950px]">

  <div class="flex mt-[80px] ml-[80px] mb-[60px]">
      <a
      href=""
      class="flex h-[1.8rem] justify-center items-center mx-[0.625rem] px-[48px] py-[16px] text-[16px] flex-shrink-0 bg-[#024059] text-white transition hover:bg-[#0488A6] rounded"
      style="border-top-left-radius: 0; border-top-right-radius: 2rem; border-bottom-left-radius: 2rem; border-bottom-right-radius: 0;"
      >
          Testimonios
      </a>
  </div>
  
  <div class="h-[150px] self-stretch px-[10rem]">
      <h1 class="text-[#024059] text-center font-['Helvetica'] text-[56px] font-bold leading-[106%]">
          Opiniones de nuestros profesionales certificados
      </h1>
  </div>
  

  <div class="max-w-7xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12 mt-[90px] justify-center items-center">
  {
    testimonios.map((testimonio) => (

    <!-- Card 1 -->
    <div class="bg-white rounded-lg max-w-[320px] mx-[8px] flex flex-col justify-between relative h-[350px]"> <!-- Ajusté la altura y el tamaño -->

      <!-- Comillas -->
      <span class="absolute left-[-25px] top-[3.5rem] text-[80px] text-[#0488A6] font-helvetica">“</span>
      
      <!-- Comillas -->
      <span class="absolute right-[-25px] bottom-[3.5rem] text-[80px] text-[#0488A6] font-helvetica">”</span>

      <!-- Nombre del Testimonio -->
      <div class="flex flex-col justify-start py-[20px] px-4"> <!-- Ajusté el padding -->
        <h3 class="text-[24px] font-semibold text-center font-helvetica">{testimonio.name}</h3>
      </div>

      <!-- Descripción -->
      <div class="flex flex-col justify-between flex-grow px-4 py-2"> <!-- Ajusté el padding y la altura -->
        <p class="text-gray-600 text-center text-[24px] font-helvetica flex-grow">{testimonio.description}</p>
      </div>

      <!-- Estrellas -->
      <div class="absolute bottom-4 left-0 right-0 flex justify-center gap-3">
          <img src="iconos/estrella.png" alt="Estrella" class="w-[16px] h-[16px]"> <!-- Ajusté el tamaño de las estrellas -->
          <img src="iconos/estrella.png" alt="Estrella" class="w-[16px] h-[16px]">
          <img src="iconos/estrella.png" alt="Estrella" class="w-[16px] h-[16px]">
          <img src="iconos/estrella.png" alt="Estrella" class="w-[16px] h-[16px]">
          <img src="iconos/estrella.png" alt="Estrella" class="w-[16px] h-[16px]">
      </div>
    </div>
    ))
  }
  </div>
</div>
